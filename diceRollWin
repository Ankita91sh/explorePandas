import pandas as pd
import numpy as np
import random

def diceResult(i):
    if i==6:
        return True
    else:
        return False        

#even turn Anupam-2,4,6...
#odd turn Ankita-1,3,5...
def turnDecide(turn):
    rem=turn%2
    if rem==0:
        turn="Anupam"
    else:
        turn="Ankita"
    return turn;

def diceRoll():
    numOnDice=random.randint(1,6)
    return numOnDice
    

lst=1000
def main():
    for i in range(100):
        numOnDice=diceRoll()
        if diceResult(numOnDice):
            turn=turnDecide(i)
            print(turn, "wins in ", i+1,"th iteration")
            break


main()

